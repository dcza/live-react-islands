{
  "name": "@live-react-islands/core",
  "version": "0.1.0",
  "description": "Core React integration for LiveReactIslands - Phoenix LiveView hook and utilities",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./ssr": {
      "import": "./dist/ssr.esm.js",
      "require": "./dist/ssr.js"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "phoenix",
    "liveview",
    "react",
    "islands",
    "ssr",
    "elixir"
  ],
  "author": "David Czaplinski",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dcza/live-react-islands.git",
    "directory": "packages/js/core"
  },
  "peerDependencies": {
    "phoenix": "^1.7.0 || ^1.8.0",
    "phoenix_live_view": "^1.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "rollup": "^4.24.0",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3"
  }
}
